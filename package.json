{
  "name": "officr",
  "publish": false,
  "version": "1.0.0",
  "description": "lightweight common utils",
  "main": "index.js",
  "scripts": {
    "prepare": "lerna bootstrap",
    "commit": "standard-commit",
    "clean": "lerna run clean --stream",
    "build": "lerna run build --stream",
    "fix": "run-s fix:*",
    "format": "prettier --write \"packages/**/{src,__tests__}/*.{js,ts,md,json}\"",
    "fix:tslint": "tslint --fix \"packages/**/src/**/*.ts\"",
    "test": "run-s test:*",
    "test:jest": "jest",
    "test:tslint": "tslint \"packages/**/src/**/*.ts\"",
    "prerelease": "run-s clean && run-s build && run-s test",
    "release": "lerna publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stasson/officr.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stasson/officr/issues"
  },
  "homepage": "https://github.com/stasson/officr#readme",
  "engines": {
    "node": "10.x"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "standard-commithook"
  },
  "lint-staged": {
    "*.{js,ts,md,json}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "proseWrap": "always"
  },
  "standard-commit": {
    "promptScope": "enforce",
    "scopes": "packages"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^10.17.5",
    "jest": "^24.9.0",
    "lerna": "^3.18.4",
    "lint-staged": "^10.0.0-beta.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "standard-commit": "^3.3.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2",
    "yorkie": "^2.0.0"
  }
}

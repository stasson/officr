{
  "name": "officr",
  "version": "3.0.1",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stasson/officr.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stasson/officr/issues"
  },
  "homepage": "https://github.com/stasson/officr#readme",
  "private": false,
  "publish": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "bin/cli.js",
  "files": [
    "dist",
    "bin"
  ],
  "engines": {
    "node": ">=12.20",
    "npm": "8.x"
  },
  "standard-version": {
    "commitAll": true,
    "scripts": {
      "postbump": "npm pkg get version | xargs npm version --ws --allow-same-version"
    }
  },
  "standard-commit": {
    "scopes": "packages",
    "promptScope": "suggest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "template"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "proseWrap": "always"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "plugin:jest/recommended"
    ]
  },
  "eslintIgnore": [
    "**/dist/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "test": "jest",
    "update": "jest --updateSnapshot",
    "coverage": "jest --coverage",
    "dev": "jest --watch",
    "format": "prettier --write **/*.{js,ts,md,json}",
    "lint": "eslint --ext .ts .",
    "prefix": "run-s format",
    "fix": "eslint --fix --ext .ts .",
    "precommit": "run-s lint",
    "commit": "npx standard-commit",
    "compile": "tsc --build tsbuild.json",
    "prebuild": "run-s lint test",
    "build": "tsc --build --force tsbuild.json",
    "prerelease": "run-s build",
    "release": "npx standard-version",
    "postrelease": "git push --follow-tags origin main && npm publish -ws"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.9",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.1",
    "@types/node": "^16.11.39",
    "@typescript-eslint/eslint-plugin": "^5.9.0",
    "@typescript-eslint/parser": "^5.9.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "fs-extra": "^10.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "shx": "^0.3.3",
    "standard-commit": "^4.2.6",
    "standard-version": "^9.3.2",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "workspaces": [
    "packages/logger",
    "package/cli"
  ]
}
